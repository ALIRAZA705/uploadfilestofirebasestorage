<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Ticket # 2358"
        android:id="@+id/tx"

        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Status : Due"

            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="30dp"
            android:text="10-Jan-2020"

            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp" >

        <Button
            android:id="@+id/start_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Task"
            android:textColor="@android:color/black"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Travel"
            android:id="@+id/start_travel"
            android:layout_marginLeft="240dp"
            android:textColor="@android:color/black"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/beforetask"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/image_travel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/beforetravel"
            android:layout_marginLeft="30dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:hint="aoa "
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="aoa aascaafegegsr"
        android:id="@+id/tx2"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fragment_container"></FrameLayout>

    <ExpandableListView
        android:id="@+id/exp"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"


        android:layout_height="match_parent"></ExpandableListView>


</LinearLayout>